<!-- app/views/orders/_line_item.html.erb -->

<div class="line-item">
  <%= image_tag line_item.product.image.url, class: "img-thumbnail" %>
  <div class="details">
    <h5><%= line_item.product.name %></h5>
    <p><%= line_item.product.description %></p>
    <p>Quantity: <%= line_item.quantity %></p>
    <p>Price: <%= humanized_money_with_symbol Money.new(line_item.item_price_cents) %></p>
    <p>Total: <%= humanized_money_with_symbol Money.new(line_item.total_price_cents) %></p>
  </div>
</div>
