<h1>Categories</h1>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>

<table class="table table-striped mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <!-- Additional actions can be added here if needed -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
